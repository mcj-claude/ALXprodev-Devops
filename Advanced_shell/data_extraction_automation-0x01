#!/bin/bash

# data_extraction_automation-0x01
# Extracts name, type, weight (kg), height (m) from data.json
# Uses ONLY jq, awk, sed as required by the task

# Path to the JSON file from Task 0
JSON_FILE="data.json"

# Safety check
if [[ ! -f "$JSON_FILE" ]]; then
    echo "Error: $JSON_FILE not found!" >&2
    exit 1
fi

# 1. Extract raw values with jq
name=$(jq -r '.name' "$JSON_FILE")
height_dm=$(jq -r '.height' "$JSON_FILE")      # decimeters
weight_hg=$(jq -r '.weight' "$JSON_FILE")      # hectograms
type=$(jq -r '.types[0].type.name' "$JSON_FILE")

# 2. Capitalize first letter of name and type using sed
name_cap=$(echo "$name" | sed 's/^./\U&/')
type_cap=$(echo "$type" | sed 's/^./\U&/')

# 3. Convert units:
#    height: decimeters → meters  (divide by 10)
#    weight: hectograms → kilograms (divide by 10)
height_m=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")
weight_kg=$(awk "BEGIN {printf \"%g\", $weight_hg / 10}")

# 4. Print the final human-readable sentence
echo "$name_cap is of type $type_cap, weighs ${weight_kg}kg, and is ${height_m}m tall."