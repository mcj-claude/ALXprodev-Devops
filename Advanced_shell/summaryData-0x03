#!/bin/bash

# summaryData-0x03
# Generates a CSV report from all PokÃ©mon JSON files in pokemon_data/
# Calculates average height and weight using awk only

INPUT_DIR="pokemon_data"
OUTPUT_CSV="pokemon_report.csv"

# Check if directory exists and has JSON files
if [[ ! -d "$INPUT_DIR" ]] || ! ls "$INPUT_DIR"/*.json >/dev/null 2>&1; then
    echo "Error: No JSON files found in $INPUT_DIR/" >&2
    exit 1
fi

# Header for CSV
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_CSV"

# Temporary file for numeric data (for averaging)
temp_data=$(mktemp)

# Process each JSON file
for file in "$INPUT_DIR"/*.json; do
    # Skip if not readable
    [[ -f "$file" ]] || continue

    # Extract name, height (decimeters), weight (hectograms)
    name=$(jq -r '.name' "$file" | sed 's/^./\U&/')  # Capitalize
    height_dm=$(jq -r '.height' "$file")
    weight_hg=$(jq -r '.weight' "$file")

    # Convert to meters and kg
    height_m=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight_hg / 10}")

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_CSV"

    # Save numeric values for average calculation
    echo "$height_m $weight_kg" >> "$temp_data"
done

# Calculate averages using awk
avg=$(awk '
    { sum_h += $1; sum_w += $2; count++ }
    END {
        if (count > 0) {
            avg_h = sum_h / count;
            avg_w = sum_w / count;
            printf "Average Height: %.2f m\nAverage Weight: %.2f kg\n", avg_h, avg_w
        }
    }
' "$temp_data")

# Final output
echo "CSV Report generated at: $OUTPUT_CSV"
echo
cat "$OUTPUT_CSV"
echo
echo "$avg"

# Cleanup
rm -f "$temp_data"